    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.S_PT_AREA, new { @class = "col-xs-2 control-label text-right" })
        <div class="col-xs-10">
            @Html.TextAreaFor(model => model.S_PT_AREA, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.S_PT_AREA)
        </div>

    </div>
    
    <div class="form-group">
        @Html.LabelFor(model => model.S_BZ, new { @class = "col-xs-2 control-label text-right" })
        <div class="col-xs-10">
            @Html.TextAreaFor(model => model.S_BZ, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.S_BZ)
        </div>

    </div>
    <div class="form-group">
        <div class="text-center">
            @Html.HiddenFor(model=>model.S_PT_ID)
         
             <button type="button" class="btn btn-warning" onclick="back()"><span class="glyphicon glyphicon-remove" aria-hidden="true" ></span>&nbsp;&nbsp;取消</button>
        </div>
    </div>
}

@section scripts{
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/bootstrapTable/js/bootstrap-table.min.js"></script>
    <script src="~/bootstrapTable/js/bootstrap-table-zh-CN.min.js"></script>
    <script src="~/layer/layer.js"></script>
    <script>
        $(function () {
            $("input,textarea").attr("readonly", true);
        })
     

        function back() {
            parent.layer.closeAll();
        }
    </script>
}